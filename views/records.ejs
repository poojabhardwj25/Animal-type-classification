<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>BPA - Animal Registration</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="navbar">
    <a href="/dashboard">Dashboard</a>
    <a href="/breed">Breed Recognition</a>
    <a href="/breed-database">Breed Database</a>
    <a href="/registration">Registration</a>
    <a href="/login" onclick="logout()">Logout</a>
  </div>

  <div class="container">
    <h1>Animal Registration</h1>
    <form id="registrationForm">
      <input type="text" id="ownerName" placeholder="Owner Name" required>
      <input type="text" id="animalId" placeholder="Animal ID / Tag Number" required>
      <select id="species" required>
        <option value="">Select Species</option>
        <option value="cattle">Cattle</option>
        <option value="buffalo">Buffalo</option>
      </select>
      <input type="text" id="breed" placeholder="Breed (or use Recognition Tool)" required>
      <input type="number" id="age" placeholder="Age (in years)" required>
      <input type="number" id="milkYield" placeholder="Milk Yield (liters/day)">
      <input type="date" id="lastVaccination" placeholder="Last Vaccination Date">
      <textarea id="remarks" placeholder="Remarks"></textarea>
      <button type="submit">Register Animal</button>
    </form>
    <p id="registrationMessage"></p>
  </div>

  <script src="/js/app.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const savedBreed = localStorage.getItem("predictedBreed");
      if (savedBreed) {
        document.getElementById("breed").value = savedBreed;
        localStorage.removeItem("predictedBreed");
      }
    });
  </script>
</body>
</html>