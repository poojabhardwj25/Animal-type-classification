<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>BPA Breed Recognition</title>
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gray-100">
<nav class="bg-blue-600 text-white p-4 flex gap-4">
  <a href="/dashboard" class="hover:underline">Dashboard</a>
  <a href="/breed" class="hover:underline">Breed Recognition</a>
  <a href="/breed-database" class="hover:underline">Breed Database</a>
  <a href="/registration" class="hover:underline">Registration</a>
  <a href="/login" onclick="logout()" class="ml-auto hover:underline">Logout</a>
</nav>
<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold mb-4 text-center">Image-based Breed Recognition</h1>
  <div class="flex flex-col md:flex-row gap-6">
    <!-- Camera -->
    <div class="flex-1">
      <div class="video-wrapper mb-2">
        <video id="video" autoplay class="w-full rounded-lg border"></video>
        <div id="overlay" class="overlay w-3/4 h-3/4 top-1/8 left-1/8"></div>
      </div>
      <div class="flex gap-2 mb-2">
        <button onclick="startCamera()" class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700">Start Camera</button>
        <button onclick="captureImage()" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Capture</button>
      </div>
      <input type="file" id="fileInput" accept="image/*" class="mb-2">
      <button onclick="uploadFile()" class="px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600">Upload Image</button>
    </div>

    <!-- Preview & Analyze -->
    <div class="flex-1">
      <canvas id="canvas" width="400" height="300" class="border rounded mb-2"></canvas>
      <button onclick="analyzeImage()" class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 w-full">Analyze</button>
    </div>
  </div>

  <!-- Results Carousel -->
  <h2 class="text-2xl font-semibold mt-6">Suggested Breeds</h2>
  <div id="breedCarousel" class="flex gap-4 overflow-x-auto mt-2"></div>
</div>
<script src="/js/app.js"></script>
</body>
</html>